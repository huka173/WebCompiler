<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <title>WebCompilerClang</title>
</head>
<body>
    <div class="header">
        <a class="logo">
            <div class="logo-icon">
                <img src="/icon.svg" class="icon" width="100" height="100">
            </div>
            <div class="icon-text">
                WebCompilerClang
            </div>
        </a>
        <a href="/info">
            <div class="info-icon">
                <img src="/info.svg" class="info" width="100" height="100">
            </div>
        </a>
    </div>
    <div class="compile-frame">
        <div class="buttons">
            <button class="button-run" form="1" type="submit">
                <img src="/run.svg" height="75px" width="75px" class="img-run">
            </button>
        </div>
        <div class="code-frame">
            <form class="input-frame" method="post" id="1">
                <i>Input:</i>
                <textarea class="input-text" id="input" name="inputCode" onkeydown="if(event.keyCode===9){var v=this.value,s=this.selectionStart,e=this.selectionEnd;this.value=v.substring(0, s)+'\t'+v.substring(e);this.selectionStart=this.selectionEnd=s+1;return false;}">
                </textarea>
            </form>
            <form class="output-frame" method="get" id="2">
                <i>Output:</i>
                <textarea class="output-text" id="output" readonly name="outputCode"><%= outputData %>
                </textarea>
            </form>
        </div>
    </div>
    <script src="/index.js"></script>
    <script src="/link.js"></script>
</body>
</html>